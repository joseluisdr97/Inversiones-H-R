        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
    </div>

</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/scriptsmaderera/Notificaciones.js"></script>
<script>

    $("body").on("click", ".eliminar", function (e) {
        e.preventDefault();
        var $this = $(this);


        var idcategoria = $this.data("idcategoria");
        //var fec = $this.data("nombre");


        //alert($this.attr("id"));//obtener el atributo id
        Swal.fire({
            title: '¿Está seguro?',
            text: "No podras revertir esto!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'Cancelar',
            confirmButtonText: 'Si, eliminar!'
        }).then((result) => {
            if (result.value) {
                location.href = "/CategoriaAdmin/Eliminar?id=" + idcategoria;
            }
        })
    });

</script>
