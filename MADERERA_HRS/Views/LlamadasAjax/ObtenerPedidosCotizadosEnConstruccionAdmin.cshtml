@{ Layout = null;}
@foreach (var item in Model)
{
    <tr>
        <td>@item.Usuario.DNI</td>
        <td>@item.Usuario.Nombre</td>
        <td>@item.Telefono_Comunicacion</td>
        <td>@item.Fecha</td>
        <td>@item.Fecha_Entrega_Solicitada</td>
        <td>@item.Direccion_Entrega</td>
        <td>@item.Total</td>
        <td>
            @{string a = "";
                a = Convert.ToString(item.Avance + "%");
            }
            <div class="progress">
                <div class="progress-bar bg-warning" role="progressbar" style="width: @a" aria-valuenow="@item.Avance" aria-valuemin="0" aria-valuemax="100">@a</div>
            </div>
            <br />
            <a class="actualizarporcentajeconstrucion btn btn-warning" data-idcotizacion="@item.Id_Cotizacion"><span class="glyphicon glyphicon-refresh"></span></a>
        </td>
        <td>
            <button type="button" class="verdetallecotizacion btn btn-success" data-toggle="modal" data-target=".bd-example-modal-xl" data-idcotizacion="@item.Id_Cotizacion"><span class="fa fa-eye"></span> ver productos</button>
            @*<a class="cotizarproductos btn btn-success" data-toggle="modal" data-target=".modal-dialog modal-xl" data-idcotizacion="@item.Id_Cotizacion"><span class="fa fa-dollar"> Cotizar productos</span></a>*@
            <a class="finalizarconstruccion btn btn-warning" data-toggle="modal" data-target=".modal-dialog modal-xl1" data-idcotizacion="@item.Id_Cotizacion"><span class="glyphicon glyphicon-play"></span> Finalizar construcción</a>
            <a class="eliminarcotizacion btn btn-danger" data-idcotizacion="@item.Id_Cotizacion"><span class="glyphicon glyphicon-trash"></span></a>
        </td>
    </tr>
}